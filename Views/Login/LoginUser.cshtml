@model FTRRequestPortal.Models.Login
@{
    ViewBag.Title = "LoginUser";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<h2>LoginUser</h2>


@using (Html.BeginForm("LoginUser", "Login", FormMethod.Post))
{
    <table class="table table-striped">
        <tr>
            <td>
                @Html.LabelFor(m => m.Username)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.Username)</span>
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(m => m.Password)
            </td>
            <td>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.Password)</span>
            </td>
        </tr>

        <tr>
            <td colspan="2" style="text-align:center">
                <input type="submit" value="Login" class="btn btn-success" />
            </td>
        </tr>
    </table>
}
